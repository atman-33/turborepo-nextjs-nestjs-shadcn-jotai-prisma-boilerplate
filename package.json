{
  "name": "turborepo-nextjs-nestjs-shadcn-prisma-boilerplate",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:api": "turbo dev --filter=api",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "----DB SECTION----": "-------------------------",
    "db:migrate:dev": "npx env-cmd -f .env.local npx prisma migrate dev",
    "db:push:dev": "npx env-cmd -f .env.local npx prisma db push",
    "db:generate": "npx env-cmd -f .env.local npx prisma generate",
    "db:studio": "npx env-cmd -f .env.local npx prisma studio",
    "----TOOLS SECTION----": "-------------------------",
    "ui:add": "npm run -w @repo/ui ui:add",
    "schema-codegen": "npx ts-node tools/schema-codegen/index.ts"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "packages/api/data-access-db/src/lib/schema.prisma"
  }
}
